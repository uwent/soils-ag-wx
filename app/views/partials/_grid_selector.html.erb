<div class="form-box">
  <%= form_tag target, method: "get", remote: true do %>
    <b>Enter parameters:</b>
    <br>
    <br>
    <label><%= select_tag :latitude, options_for_select(latitudes, "43.0") %> Latitude</label>&nbsp;
    <label><%= select_tag :longitude, options_for_select(longitudes, "-89.0") %> Longitude</label>
    <br>

    <p>
      <label><%= date_select :start_date, :date,
        start_year: Date.current.year - 4,
        end_year: Date.current.year,
        default: @date - 1.month %> Start date</label><br>
      <label><%= date_select :end_date, :date,
        start_year: Date.current.year - 4,
        end_year: Date.current.year,
        default: @date %> End date</label>
    </p>

    <% if @temp_selector %>
    Temperature units:<br>
    <%= radio_button_tag :temp_units, "F", true %>Fahrenheit
    <%= radio_button_tag :temp_units, "C" %>Celcius<br><br>
    <% end %>

    <%= button_tag "Get Data Series", name: "format", value: "js" %>
  <% end %>
</div>
