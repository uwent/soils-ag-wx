<div class="form-box">
  <%= form_tag target, method: "get", remote: true do %>
    <b>Enter parameters:</b><br>
    <p>
      <div onChange="moveDot()">
        Location:<br>
        <label><%= select_tag :latitude, options_for_select(latitudes, "43.0") %> Latitude</label>&nbsp;
        <label><%= select_tag :longitude, options_for_select(longitudes, "-89.0") %> Longitude</label><br>
        <button type="button" onclick="getGeoLocation()">Get my location</button>&nbsp;<span id="geo-loc-msg"></span>
      </div>
    </p>

    <p>
      Date range:<br>
      <label><%= date_select :start_date, :date,
        start_year: Date.current.year - 4,
        end_year: Date.current.year,
        default: @date - 1.month %> Start</label><br>
      <label><%= date_select :end_date, :date,
        start_year: Date.current.year - 4,
        end_year: Date.current.year,
        default: @date %> End</label>
    </p>

    <% if @temp_selector %>
    Temperature units:<br>
    <label><%= radio_button_tag :temp_units, "F", true %>Fahrenheit</label>
    <label><%= radio_button_tag :temp_units, "C" %>Celcius</label><br>
    <br>
    <% end %>

    <%= button_tag "Get Data Series", name: "format", value: "js" %>
  <% end %>
</div>
