<!DOCTYPE html>
<html lang="en">

<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
  <%= javascript_include_tag 'application' %>
	<script async src="https://www.googletagmanager.com/gtag/js?id=G-H9J1XBG94G"></script>
	<script>
		window.dataLayer = window.dataLayer || [];
		function gtag(){dataLayer.push(arguments);}
		gtag('js', new Date());
		gtag('config', 'G-H9J1XBG94G');
	</script>
  <%= csrf_meta_tags %>
  <script language="JavaScript">
    <%= yield :header_script -%>
  </script>
	<title><%= yield :title -%></title>
  <%= stylesheet_link_tag 'application' %>
	<%= yield :stylesheet -%>
	<%= yield :scripts -%>
</head>

<body>
	<div id="wrapper">
		<div id="nav-bar">
			<h1 id="title"><%= link_to "UW Extension Ag Weather", :controller => "navigation" %></h1>
			<div id="nav">
				<!-- link_to "Drought", {:controller => "drought"}, {:selected => @tab_selected[:drought]} -->
				<%= link_to "Weather", {:controller => "weather"}, {:selected => @tab_selected[:weather]} %>
				<%= link_to "Sun/Water", {:controller => "sun_water"}, {:selected => @tab_selected[:sun_water]} %>
				<%= link_to "Thermal Models", {:controller => "thermal_models"}, {:selected => @tab_selected[:thermal_models]} %>
				<%= link_to "About Us", {:controller => "navigation", :action => :about}, {:selected => @tab_selected[:about]} %>
			</div>
		</div>
		<div id="body">
			<div id="body-top">
				<div id="body-top-2"></div>
				<div id="body-bot">
					<div id="welcome">
						<%= yield :welcome -%>
					</div>
					<div id="content">
						<%= yield -%>
					</div>
					<div class="clear"></div>
				</div>
			</div>
		</div>
		<div id="copyright">
			<%= yield :footer %>
			<p>Copyright Â©<%= Date.current.year %> University of Wisconsin. All rights reserved.</p>
		</div>
	</div>
</body>
</html>
