<% if @data %>

<div id="copy-container">
  <h4>Precipitation data series</h4>
  <p>
    <b>Location:</b> <%= @lat %>&deg;N, <%= @long %>&deg;W (<%= link_to "view site data page", controller: :sites, action: :show, lat: @lat, long: @long %>)<br>
    <b>Date range:</b> <%= @start_date %> to <%= @end_date %> (<%= pluralize(@data.size, "days") %>)
  </p>
  <div class="tbl-container">
    <table class="grid-table">
      <thead>
        <tr>
          <th>Day</th>
          <th>Date</th>
          <th>Precip<br>(mm)</th>
          <th>Cumul.<br>precip<br>(mm)</th>
          <th>Precip<br>(in)</th>
          <th>Cumul.<br>precip<br>(in)</th>
        </tr>
      </thead>
      <tbody>
      <% @data.each_with_index do |day, i| %>
        <tr>
          <td><%= i + 1 %>
          <td><%= day[:date] %></td>
          <td><%= fmt_num(day[:value], 2) %></td>
          <td><%= fmt_num(day[:cumulative_value], 2) %></td>
          <td><%= fmt_num(day[:value] / 25.4, 2) unless day[:value].nil? %></td>
          <td><%= fmt_num(day[:cumulative_value] / 25.4, 2) unless day[:cumulative_value].nil? %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<p>
  <%= submit_tag "Copy to clipboard", onclick: "copyTable()" %>
  <span id="copy-confirm" style="display: none;"> Copied!</span>
</p>

<% else %>

No data!

<% end %>
