<% @title = "Webcam Archive for #{@start_date} #{@start_date.year}-#{@start_date.month}-#{@start_date.day}"%>

<% content_for :welcome do %>
  <h2><%= @title %></h2>
  <%= image_tag 'p1344.gif' %>
  <p>
    <%= form_tag controller: 'weather', action: :webcam_archive do %>
      <%= select_date @start_date %>
      <%= submit_tag 'See archive for this date'%>
    <% end %>
  </p>
<% end %>

<table>
  <tr>
  <% col = 0 %>
  <% @thumbs.zip(@fulls) do |thumb,full| %>
    <td><%= webcam_archive_link(thumb,full).html_safe %></td>
    <% col += 1 %>
    <% if col > 4 %>
      </tr><tr>
      <% col = 0 %>
    <% end %>
  <% end %>
    
  </tr>
</table>

<br><%= link_to "Back", :back %>
