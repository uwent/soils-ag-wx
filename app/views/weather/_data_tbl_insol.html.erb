<% if @data %>

<div id="insol-container">
  <h4>Insolation data series</h4>
  <p>
    <b>Location:</b> <%= @lat %>&deg;N, <%= @long %>&deg;W<br>
    <b>Date range:</b> <%= @start_date %> to <%= @end_date %><br>
    <b>Days:</b> <%= @data.size %>
  </p>
  <div class="tbl-container">
    <table class="grid-table" id="table">
      <thead>
        <tr>
          <th>Day</th>
          <th>Date</th>
          <th>Insolation<br>(mJ/m<sup>2</sup>/day)</th>
          <th>Insolation<br>(kWh/m<sup>2</sup>/day)</th>
        </tr>
      </thead>
      <tbody>
        <% @data.each_with_index do |day, i| %>
          <tr>
            <td><%= i + 1 %></td>
            <td><%= day[:date] %></td>
            <td><%= fmt_num(day[:value], 2) %></td>
            <td><%= fmt_num(day[:value] / 3.6, 2) %></td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <% @totals.each do |k, v| %>
          <tr>
            <td></td>
            <td><%= k %>:</td>
            <td><%= fmt_num(v, 2) %></td>
            <td><%= fmt_num(v / 3.6, 2) %></td>
          </tr>
        <% end %>
      </tfoot>
    </table>
  </div>
</div>

<p>
  <%= submit_tag "Copy to clipboard", onclick: "copy('insol')" %>
  <span id="insol-confirm" style="display: none;"> Copied!</span>
</p>

<% else %>

No data!

<% end %>
