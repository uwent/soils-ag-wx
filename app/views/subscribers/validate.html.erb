<% @title = "Email Subscriptions" %>
<% @welcome_image = "awon.png" %>

<% content_for :welcome do %>
  <h2><%= @title %></h2>
  <p>Add, remove, or manage your saved sites and daily email subscriptions here.</p>
<% end %>

<h2>Validate Email Address</h2>
<hr>

<%= render "notices" %>

<h4>Sign in to your account</h4>

<p>To ensure you are the owner of this email address, we have sent a six-digit validation code to <b><%= @subscriber.email %></b>. Please enter the validation code you were sent to finish signing in.</p>

<p>
  <%= form_tag validate_subscriber_path(@subscriber) do %>
    <%= label_tag :validate_code, "Validation code: " %>
    <%= text_field_tag :validation_code, nil, required: true, autofocus: true %>
    <%= submit_tag "Sign in" %>
  <% end %>
</p>

<% if @subscriber.errors.any? %>
  <p>
    <span class="error"><%= @subscriber.errors.full_messages.first %></span>
  </p>
<% end %>

<%= content_for :footer do %>
  <%= link_to "Back", action: :index %>
<% end %>
