<% @title = "Email Subscriptions" %>
<% @welcome_image = "awon.png" %>

<script>
$(document).ready(() => {
  $("#resend_confirmation").click((event) => {
    // sub_id = $(event.target).data("sub-id")
    url = "<%= resend_confirmation_subscriber_url(@subscriber) %>"
    $.post(url)
      .done(() => {alert("We have resent the confirmation. Check your email.")})
      .error(() => {alert("ERROR: We were unable to resend your confirmation.")})
  })
})
</script>

<% content_for :welcome do %>
  <h2><%= @title %></h2>
  <p>Add, remove, or manage your saved sites and daily email subscriptions here.</p>
<% end %>

<h2>Account Confirmation</h2>

<hr>

<h4>Confirm your account</h4>

<p>We have sent you a confirmation email at <b><%= @subscriber.email %></b>. Please click the link in the email to confirm your account.</p>

<p>If you need the confirmation code resent: <button id='resend_confirmation', data-sub-id="<%= @subscriber.id %>">Resend Confirmation</button></p>

<%= content_for :footer do %>
  <%= link_to "Back", action: :index %>
<% end %>
